<div>
  <h1>Food List</h1>
  <div>
    <%= link_to 'Add Food', '/foods/new', class: 'btn btn-primary add-food-button' %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @food.each do |food| %>
        <tr>
          <td><%= link_to "#{food.name}", food_path(food.id), class: 'food-link' %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: 'btn btn-danger delete-button' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>