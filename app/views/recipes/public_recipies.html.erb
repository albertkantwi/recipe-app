<% if @public.length > 0 %>
<div class="container ">
  <p class="public text-center mb-4">Public Recipes</p>
</div>
  <ul>
    <% @public.each do |recipe| %>
      <li>
      <div class="public-recipe">
      <div>
        <p><%= link_to recipe.name, recipe_path(recipe) %></p>
        <p>by: <%= recipe.user.name %></p>
      </div>
      <div>
        <p class="recipe-info">Total Food items: <%= recipe.recipe_foods.length %></p>
        <% total_price = recipe.recipe_foods.sum { |food| food.food.price } %>
        <p class="recipe-total-price">Total Price $<%= total_price %></p>
      </div>
      </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2 class="no-recipes">No Public Recipes</h2>
<% end %>